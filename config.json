{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "images/ivr.png",
    "category": "message"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "IVR",
      "description": "To perform IVR calls via viviaconnect API."
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "campaignCode": "{{InteractionDefaults.Email}}"
        },
        {
          "phoneNumber": "{{Contact.Default.PhoneNumber}}"
        }
      ],
      "outArguments": [
        {
          "status": ""
        }
      ],
      "url": "http://majidnachan.herokuapp.com/execute"
    }
  },
  "configurationArguments": {
    "save": {
      "url": "http://majidnachan.herokuapp.com/save"
    },
    "publish": {
      "url": "http://majidnachan.herokuapp.com/publish"
    },
    "validate": {
      "url": "http://majidnachan.herokuapp.com/validate"
    },
    "stop": {
      "url": "http://majidnachan.herokuapp.com/stop"
    }
  },
  "wizardSteps": [
    { "label": "IVR Configuration", "key": "step1" }
  ],
  "userInterfaces": {
    "configModal": {
      "height": 200,
      "width": 300,
      "fullscreen": true
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "phoneNumber": {
              "dataType": "Phone",
              "isNullable": false,
              "direction": "in"
            }
          },
          {
            "campaignCode": {
              "dataType": "Text",
              "isNullable": false,
              "direction": "in"
            }
          }
        ],
        "outArguments": [
          {
            "status": {
              "dataType": "Text",
              "direction": "out",
              "access": "visible"
            }
          }
        ]
      }
    }
  }
}
